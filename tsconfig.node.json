{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "strict": false,
        "noEmit": false,
        "outDir": "dist-electron"
    },
    "include": [
        "vite.config.ts",
        "electron/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-electron"
    ]
}